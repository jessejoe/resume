<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ profile.name }} - Resume</title>
  <link href="css/bootstrap.min.css" rel="stylesheet" />
  <link rel="shortcut icon" href="images/favicon.ico">
  <style>
    body {
      font-family: "Source Sans Pro";
    }

    h3 {
      font-weight: bold; 
      margin-top: 0.5em;
    }

    h4 {
      margin-top: 1.1em;
    }

    .footer,
    section {
      border-top: 1px solid #eee;
      padding: 1em 0;
    }

    section p {
      margin: 0.8em 0 0.4em 0;
    }

    section p.sticky {
      margin: 0;
    }

    section ul {
      margin-top: 1em;
    }

    img.logo {
      height: 50px;
    }

    img.photo {
      width: 100px;
      height: auto;
      margin: 20px 0;
    }

    .contacts dt {
      width: 60px;
      text-align: left
    }

    .contacts dd {
      margin-left: 65px;
    }

    .item {
      border-bottom: 1px solid #eee;
      padding-top: 5px;
    }

    .item:last-child {
      border-bottom: none;
    }

    header.main h3 {
      margin-top: 0.3em;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <header class="main row">
          <div class="header">
            <div class="col-md-6 col-sm-12">
              <h3 class="pull-right">{{ profile.label }}</h3>
              <h1>{{ profile.name }}</h1>
            </div>


            <div class="col-md-6 col-sm-12">
              <img class="photo img-responsive img-circle pull-right" src="{{ profile.image }}">
            </div>
          </div>

          <div class="">
            <div class="col-md-6 col-sm-12">
              <ul class="list-unstyled">
                <li><b>Location:</b> {{ profile.address }}</li>
                <li><b>Phone:</b> {{ profile.phone }}</li>
                <li><b>Email:</b> <a href="mailto:{{ profile.email }}">{{ profile.email }}</a></li>
                <li><b>Websites:</b></li>
                <li><a href="{{ profile.website }}">{{ profile.website }}</a></li>
                {% for network in profile.networks %}
                <li>
                  <a href="{{ network.url }}">
                    {{ network.username }} @ {{ network.provider }}
                  </a>
                </li>
                {% endfor %}
              </ul>{% if opensource %}
              <ul class="opensource list-inline text-right">
                <li>
                  {# Hardcoded to jessejoe.com since multiple domains don't work with Github sites nicely #}
                  <a href="http://jessejoe.com/opensource.html">
                            {{ labels.opensource or 'Open Source' }}
                        </a>
                </li>
              </ul>{% endif %}
            </div>
          </div>
        </header>

        {% if profile.summary %}
        <section class="row">
          <div class="col-md-9">
            <strong><i>{{ h.md(profile.summary) }}</i></strong>
          </div>
        </section>
        {% endif %} {% if work %}
        <section class="row" style="padding-top: 0; margin-top: 0;">
          <div class="col-md-9">
            {% for exp in work %}
            <div class="item">
              {% if exp.image %}
              <h3 class="pull-right"><img class="logo" src="{{exp.image}}" alt="{{ exp.company }}"></h3>
              {% else %}
              <h3>{{ exp.company }}</h3>
              {% endif %}
              {% if exp.website %}
              <p class="sticky">
                <a href="{{ exp.website }}">{{ exp.company }}</a>
              </p>
              {% endif %} 
              <strong>{{ exp.role }}</strong> {% if exp.date %}
              <p class="sticky">{{ exp.date }}</p>
              {% endif %} {% if exp.summary %}
              <p>{{ exp.summary }}</p>
              {% endif %} {% if exp.highlights %}
              <ul>
                {% for line in exp.highlights %}
                <li>{{ h.md(line) }}</li>
                {% endfor %}
              </ul>
              {% endif %}
            </div>
            {% endfor %}
          </div>
        </section>
        {% endif %} {% if projects %}
        <section class="row">
          <header class="col-md-3">
            <h3>{{ labels.projects or 'Projects' }}</h3>
          </header>
          <div class="col-md-9">
            {% for project in projects %}
            <div class="item">
              <h3>{{ project.name }}</h3> {% if project.role %}
              <strong>{{ project.role }}</strong>
              <br /> {% endif %} {% if project.date %}
              <p class="sticky">{{ project.date }}</p>
              {% endif %} {% if project.website %}
              <p class="sticky">
                <a href="{{ project.website }}">{{ project.website }}</a>
              </p>
              {% endif %}
              <p>{{ project.summary }}</p>

              {% if project.highlights %}
              <ul>
                {% for line in project.highlights %}
                <li>{{ h.md(line) }}</li>
                {% endfor %}
              </ul>
              {% endif %}
            </div>
            {% endfor %}
          </div>
        </section>
        {% endif %} {% if skills %}
        <section class="row skills">
          <header class="col-md-3">
            <h3>Skills</h3>
          </header>
          <div class="col-md-9">
            <div class="row skills">

              {% for area in skills %}
              <div class="col-md-6">
                <h4>{{ area.area }}</h4>
                <ul>
                  {% for skill in area.skills %}
                  <li>{{ skill }}</li>
                  {% endfor %}
                </ul>
              </div>
              {% endfor %}

            </div>
          </div>
        </section>
        {% endif %} {% if education %}
        <section class="row">
          <header class="col-md-3">
            <h3>Education</h3>
          </header>
          <div class="col-md-9">

            {% for edu in education %}
            <div class="">
              <h3>{{ edu.location }}</h3>
              <p class="sticky">{{ edu.date }}</p>
              <p>{{ edu.summary }}</p>
            </div>
            {% endfor %}
          </div>
        </section>
        {% endif %} {% if certifications %}
        <section class="row">
          <header class="col-md-3">
            <h3>Certs/Conferences</h3>
          </header>
          <div class="col-md-9">

            <ul class="list-unstyled">
              {% for cert in certifications %}
              <li>{{ cert }}</li>
              {% endfor %}
            </ul>
          </div>
        </section>
        {% endif %} {% if interests %}
        <section class="row">
          <header class="col-md-3">
            <h3>Interests</h3>
          </header>
          <div class="col-md-9">

            <ul class="list-unstyled">
              {% for interest in interests %}
              <li>{{ interest }}</li>
              {% endfor %}
            </ul>
          </div>
        </section>
        {% endif %}

      </div>
    </div>
  </div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

</body>

</html>
